{
  "compileOnSave": false,
  "compilerOptions": {
    "allowUnusedLabels": false,
    "baseUrl": "src",
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es2020"
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "preserveWhitespaces": false
  },
  "include": [
    "src/**/*.ts",
  ]
}
